{
  "include": ["src/**/*.ts"],
  "exclude": [],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "typeRoots": ["./typings", "./node_modules/@types/"],
    "outDir": "./dist/",
    "declaration": true
  }
}
